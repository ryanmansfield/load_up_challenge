<%= form_with(model: booking) do |form| %>
  <% if booking.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :animal_name, style: "display: block" %>
    <%= form.text_field :animal_name %>
  </div>

  <div>
    <%= form.label :animal_type, style: "display: block" %>
    <%= form.select :animal_type, options_for_select([["Dog", "dog"], ["Cat", "cat"]]) %>
  </div>

  <div>
    <%= form.label :hours, style: "display: block" %>
    <%= form.number_field :hours, min: 2, max: 8 %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div class="mt-2">
    <%= form.submit class: 'btn btn-primary'%>
  </div>
<% end %>
